      .footer-links {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 10px;
      }
    
      .card2 {
                    max-width: calc(100% - 20px);
                }
      .card-container2{
        gap: 30px;
      }
    }
    
    @media screen and (min-width: 768px) and (max-width: 1023px) {
      .logo span {
