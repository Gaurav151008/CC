  display: flex;
  align-items: center;
}

.logo i {
  font-size: 24px;
  color: #333333;
  margin-right: 10px;
}

.logo span {
  font-size: 40px;
  font-weight: bold;
  color: #333333;
  margin-left: 10%;
  white-space: nowrap;
}

.options {
  display: flex;
  align-items: center;
}

.options a {
  margin-left: 20px;
  margin-right: 20px;
  text-decoration: none;
  color: #333333;
  font-weight: bold;
  font-size: 22px;
}

.login-button {
  display: flex;
  align-items: center;
  padding: 10px 15px;
  border-radius: 5px;
  background-color: #333333;
  color: #ffffff;
  text-decoration: none;
  font-size: 18px;
}

.login-button i {
  font-size: 20px;
  margin-right: 5px;
}

