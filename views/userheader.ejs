      }
      .card2 {
                    max-width: calc(50% - 20px);
                }
                .card-container2{
        gap: 30px;
      }
    }
    
    @media screen and (min-width: 1024px) {
      .footer {
        padding: 20px;
      }
    
      .footer-links {
        display: flex;
        justify-content: center;
      }
    }

