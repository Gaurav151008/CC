          .card-details2 {
            flex-grow: 1;
        }
        
        .card-details2 h3 {
            /* margin-top: 2; */
            font-size: 15px;
            color: #333;
            
          }
          
          .card-details2 p {
            margin: 5px 0;
            font-size: 14px;
            color: #777;
        }
        
        .card-details2 span {
          font-weight: bold;
            color: #333;
        }
        
        .card-quantity2 {
          flex-shrink: 0;
          display: flex;
          align-items: center;
        }
        
        .card-quantity2 input {
          width: 40px;
            padding: 5px;
          }

          .card-quantity2 {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 10px;
            background-color: #f2f2f2;
            border-radius: 4px;
          }

.card-quantity2 input[type="number"] {
    padding: 5px -16px;
    border: 1px solid #ccc;
    border-radius: 4px;
    font-size: 14px;
    margin-right: 2px;
}

.card-quantity2 button {
    padding: 8px 16px;
    background-color: #4CAF50;
    color: white;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-size: 14px;
    margin-left: 5px;
}

.card-quantity2 button:hover {
    background-color: #45a049;
}

.card-quantity2 button:focus {
    outline: none;
}

.card-quantity2 button:active {
    background-color: #3e8e41;
}

      .hidden-field {
        display: none;
      }
      .popup {
        display: none;
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        padding: 20px;
        background-color: #f1f1f1;
        border: 1px solid #ccc;
      }
    /* Responsive Styles */
    @media screen and (max-width: 767px) {
      .header {
        flex-direction: column;
        align-items: flex-start;
