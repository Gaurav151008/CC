<%- include('../userheader.ejs')%>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: Arial, sans-serif;
    }

    .main-container {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      background-color: #b6b2b2;
    }

    .signup-container {
      background-color: #ffffff;
      border-radius: 10px;
      border-color: #191616;
      padding: 40px;
      max-width: 400px;
      width: 90%;
    }

    .signup-container h2 {
      text-align: center;
      margin-bottom: 20px;
    }

    .signup-form {
      display: grid;
      gap: 20px;
    }

    .signup-form label {
      font-weight: bold;
    }

    .signup-form input[type="text"],
    .signup-form input[type="email"],
    .signup-form input[type="password"],
    .signup-form input[type="tel"] {
      width: 100%;
      padding: 10px;
      border: 1px solid #ccc;
      border-radius: 5px;
    }

    .signup-form button {
      width: 100%;
      padding: 10px;
      background-color: #333333;
      color: #ffffff;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }

    @media screen and (max-width: 768px) {
      .signup-container {
        padding: 20px;
      }
    }

    @media screen and (max-width: 480px) {
      .signup-container {
        padding: 10px;
      }
    }
  </style>

  <div class="main-container">
    <div class="signup-container">
      <h2>Signup</h2>
      <form class="signup-form" method="post" action="/userSup">
        <label for="userName">Username</label>
        <input type="text" id="userName" name="name" placeholder="Enter your username">

        <label for="userEmail">Email</label>
        <input type="email" id="userEmail" name="email" placeholder="Enter your email">

        <label for="userPassword">Password</label>
        <input type="password" id="userPassword" name="password" placeholder="Enter your password">

        <label for="userContact">Contact</label>
        <input type="tel" id="userContact" name="contact" placeholder="Enter your contact number">

        <button type="submit">Sign Up</button>
      </form>
    </div>
  </div>

<%- include('../userfooter.ejs')%>
